<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="style.css">
    <style>
        .actions {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .actions form {
            margin: 0;
            display: inline;
        }

        .actions a, .actions button {
            text-decoration: none;
            padding: 8px 12px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
        }

        .details-btn {
            background-color: #0056b3;
            color: white;
        }

        .edit-btn {
            background-color: #007bff;
            color: white;
        }

        .delete-btn {
            background-color: red;
            color: white;
        }

        .delete-btn:hover {
            background-color: darkred;
        }
    </style>
</head>
<body>
    <h1>Queries About Your Food!</h1>

    <% for(let post of posts) { %>
        <div class="post">
            <h3 class="user">@ <%= post.username %></h3>
            <h4 class="content"><%= post.content %></h4>

            <div class="actions">
                <a href="/posts/<%= post.id %>" class="details-btn">See your order details</a> 
                <a href="/posts/<%= post.id %>/edit" class="edit-btn">Edit</a>
                <form method="post" action="/posts/<%= post.id %>?_method=DELETE"> 
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
            </div>
        </div>
        <br>
    <% } %>

    <br>
    <a href="/posts/new">Create a New Delicious Order Now!</a>
</body>
</html>
