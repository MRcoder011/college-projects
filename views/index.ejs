<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="style.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f8f9fa;
            background-image: url(images/back.webp); /* Add this line */
            background-size: cover; /* Ensure the image covers the entire background */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat; /* Prevent the image from repeating */
        }

        h1 {
            margin-bottom: 20px;
        }

        .post {
            background: white;
            border-radius: 8px;
            padding: 15px;
            margin: 10px auto;
            width: 50%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .user {
            color: #007bff;
        }

        .actions {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .actions form {
            margin: 0;
            display: inline;
        }

        .actions a, .actions button {
            text-decoration: none;
            padding: 8px 12px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
        }

        .details-btn {
            background-color: #0056b3;
            color: white;
        }

        .edit-btn {
            background-color: #007bff;
            color: white;
        }

        .delete-btn {
            background-color: red;
            color: white;
        }

        .delete-btn:hover {
            background-color: darkred;
        }

        /* Centering the "Create New Order" Button */
        .new-order-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .new-order-btn {
            background-color: #007bff;
            color: white;
            text-decoration: none;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            display: inline-block;
        }

        .new-order-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>üõçÔ∏è All Orders Details!</h1>

    <% for(let post of posts) { %>
        <div class="post">
            <h3 class="user">@ <%= post.username %></h3>
            <h4 class="content"><%= post.content %></h4>

            <div class="actions">
                <a href="/posts/<%= post.id %>" class="details-btn">See your order details</a> 
                <a href="/posts/<%= post.id %>/edit" class="edit-btn">Edit</a>
                <form method="post" action="/posts/<%= post.id %>?_method=DELETE"> 
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
            </div>
        </div>
    <% } %>

    <!-- Centered "Create a New Delicious Order Now!" Button -->
    <div class="new-order-container">
        <a href="/posts/new" class="new-order-btn">Create a New Delicious Order Now!</a>
    </div>

</body>
</html>

